/* pages/projectList/index.wxss */
.logo{
    width: 100%;
    height: 420rpx;
}
.weui-media-box__title_in-text{
    margin: 0;
}
.weui-media-box__desc{
    font-size: 0;
}
.itemname{
    padding:15rpx 0 ;
    border-bottom:1rpx solid #e5e5e5;
    font-size:28rpx;
    margin-bottom: 10px;
}
.itemname image{
    display: block;
    float: left;
    width: 30rpx;
    height: 30rpx;
    margin:6rpx 10rpx 0 0;
}
.shadow{
    width: 100%;
    padding:10px;
    box-sizing: border-box;
    background-color: rgba(255, 255, 255, 0.5);
    font-size: 13px;
    color: #333333;
}
.mt{
    padding-bottom: 10rpx; 
    line-height: 20px;
}
.topName{
    border-bottom:1rpx solid #dddddd; 
    padding-bottom: 5px;
    margin-bottom:5px;
}
.look{
    float: left;
    background-color: #ee8742;
    border-radius: 5px;
    color: #ffffff;
    padding:5px 10px;
}
.sign{
    float: left;
    background-color: #eb5b36;
    border-radius: 5px;
    color: #ffffff;
    margin-left: 20px;
    padding:5px 10px;
}
.btn_hover{
    color:rgba(255, 255, 255, 0.6)!important;
    background-color:rgb(253, 30, 27)!important
  }