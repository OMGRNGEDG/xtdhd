/* pages/productDetail/index.wxss */
@import"../../wxParse/wxParse.wxss";
.weui-media-boxtitle{
    font-weight:600;
    font-size:17px;
    width:auto;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
    word-wrap:normal;
    word-wrap:break-word;
    word-break:break-all;
    color:#000;
    margin-bottom: 10px;
}
.weui-media-box:before{content:" ";position:absolute;left:0;top:0;right:0;height:0px;border:0}
.weui-media-box{padding:0 15px 10px 15px}
.weui-media-boxdesc{
    color:#999;
    font-size:13px;
    line-height:1.2;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
}
.shadow{
    width: 100%;
    box-sizing: border-box;
    background-color: rgba(255, 255, 255, 0.5);
    font-size: 13px;
    color: #333333;
}
.btn_hover{
    color:rgba(255, 255, 255, 0.6)!important;
    background-color:rgb(253, 30, 27)!important
  }
.weui-media-box__title{
    overflow: auto;
}
.fouding{
    text-align: center;
    background: rgb(165, 51, 51);
    border-radius: 10rpx;
    color: #ffffff;
    text-decoration: none;
    margin:0 15px 15px 15px;
    font-size: 16px;
    padding:5px 0;
}