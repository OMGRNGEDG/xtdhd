.weui-media-box__desc{
  margin-bottom: 10rpx;
}
.usermotto {
  margin-top: 200px;
}
.weui-media-box__hd_in-appmsg{
  width:180rpx;
  height:180rpx;
  line-height:180rpx;
}
.red{
  color: red;
  font-size: 30rpx;
}
.reds{
  margin:0 10rpx;
  color: red
}
.redson{
  color: red;
  margin:0 10rpx;
  font-size: 36rpx;
}
.redthree{
  color: red;
  display: inline;
}
.weui-btnn{
  float: left;
  padding:5rpx 10rpx;
  margin: 0;
  display: inline;
  text-align: center;
  font-size: 13px;
  text-decoration:none;
  border-radius:5px;
  background-color: #f3565d;
  overflow:hidden;
  color: #ffffff;
  margin-right: 15rpx;
}
.btn_hover{
  color:rgba(255, 255, 255, 0.6)!important;
  background-color:rgb(253, 30, 27)!important
}
.clearfix:after {display: block;content: " ";clear: both;}
.userInfo{
  background-color: #ee8541;
  width: 100%;
  color: #ffffff;
}
.username{
  text-align: center;
  font-size: 30rpx;
}
.title{
  text-align: center;
  padding: 10rpx 0 0 0; 
  font-size: 20rpx;
}
.titleMonery{
  font-size: 40rpx;
  margin-left: 10rpx;
  text-align: center;
}
.titleson{
  text-align: center;
  padding: 10rpx 0 15rpx 0; 
  font-size: 24rpx;
}
.userimg{
  text-align: center;
}
.userimg image{
  width: 112rpx;
  height: 105rpx;
}
.weui-flex__item{
  text-align: center;
  font-size: 30rpx;
  background-color: #f3565d;
  color: #ffffff;
  padding: 10rpx 0;
}
.weui-flex__item1{
  text-align: center;
  font-size: 24rpx;
  background-color: #eb5b36;
  color: #ffffff;
  padding: 10rpx 0;
  flex: 1;
}
.weui-flex1{
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  margin: 0 15px;
  border-top:1rpx solid #e5e5e5;
}
.weui-flex__item2{
  text-align: center;
  font-size: 24rpx;
  padding: 10rpx 0;
  flex: 1;
}


.weui-label{
  width: 100rpx;
  text-align: center;
}
.weui-input{
  border: 1rpx solid #666666;
  height:2em;
  min-height:2em;
  line-height:2em;
  text-indent: 1em
}
.weui-cellInput{
  padding:5px 15px;
  position:relative;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  -webkit-box-align:center;
  -webkit-align-items:center;
  align-items:center;
}
.weui-panel__bd{
  color: #262626;
  font-size: 28rpx;
}
.weui-panel{
  background-color: #f5f5f5
}
.itemname{
  margin: 0 15px;
  border-bottom:1rpx solid #e5e5e5;
}
.weui-media-box:before{content:" ";position:absolute;left:0;top:0;right:0;height:1px;border: 0}
.ext_name{
  float: left;
  font-size: 44rpx;
}
.itemname image{
  display: block;
  float: left;
  width: 30rpx;
  height: 30rpx;
  margin:6rpx 10rpx 0 0;
}
