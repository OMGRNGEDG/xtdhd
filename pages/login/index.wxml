<view class="login">
    <view class="logo">
        <image src="../../images/bannerLog.jpg" />
    </view>
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input weui-cell_vcode" style="border:0">
            <view class="weui-cell__hd">
                <view class="weui-label">手机号</view>
            </view>
            <view class="weui-cell__bd">
                <input bindinput="bindKeyInput" type="number"  maxlength="11" class="weui-input" placeholder="请输入手机号" />
            </view>
            <view class="weui-cell__ft">
                <view bindtap="getCode" class="weui-vcode-btn {{counting?'classtitle':''}}">{{timeCountDownTop}}</view>
            </view>
        </view>
        <view class="weui-cell weui-cell_input weui-cell_vcode">
            <view class="weui-cell__hd">
                <view number class="weui-label">验证码</view>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" bindinput="writeCode" placeholder="请输入验证码" />
            </view>
        </view>
    </view>
    <view class="weui-btn-area">
        <button class="weui-btn" type="primary" bindtap="logIn">确定</button>
    </view>
     <view class="weui-footer">
            <view class="weui-footer__text">Copyright © 2016-2018 jianvgroup.com</view>
        </view>
</view>