/* pages/financelist/index.wxss */
.col-sm-12{
    padding-left:20rpx;
position:relative;
min-height:1px;
padding-right:20rpx;
padding-bottom:20rpx;

}
.portlet-title{
    border-bottom:1px solid #eee;
    padding:10rpx 0;
    overflow:hidden;
    text-align:center;
    font-size:30rpx;
    background-color:#ee8541;
    color:#fff;    
}
.tableTitle{
    display: flex;
}
.weui-flex__item{
    display:flex;
justify-content:center;
align-items:center;
padding:8px 0;
background-color:#eb5b36;
color: #fff;
font-size:26rpx;

}
.blue{
    color: #428bca;
}
.weuigrids{
    border-left:1rpx solid #d9d9d9;
    overflow:hidden;
}
.vwdataodd{ background-color: #fff; }
.vwdataeven{ background-color: #f9f9f9; }
.weui-flex__form {
    text-align:center;
    -webkit-flex:1;
    flex:1;
    box-sizing:border-box;
    border-right:1rpx solid #ddd;
    border-bottom:1rpx solid #ddd;
    font-size:13px;
    padding:8px 0;
    
    }
.weui-loadmore,.weui-loadmore{
    margin: 0 auto;
}
.load{
    width: 100%;
}
#mychart-dom-bar canvas{
    height: 600rpx;
    width:  100%;
}
.titleCon{
display:block;
overflow:hidden;
position:relative;

}
.visual{
    width: 80px;
    height: 80px;
    display: block;
    float: left;
    padding-top: 10px;
    padding-left: 15px;
    margin-bottom: 15px;
    font-size: 35px;
    line-height: 35px;
}
.visual image{
    width: 100%;
    height: 100%;
}
.periods{
    color: white;
    position: absolute;
    right: 15px;
    padding-right: 15px;
    padding-top: 25px;
    text-align: right;
    font-size: 20px;
    line-height: 36px;
    letter-spacing: -1px;
    margin-bottom: 0px;
    font-weight: 300;
}